= render layout: 'layout_index' do 

  table.table.table-striped.table-hover.table-sm
    thead.thead-inverse
      tr
        th Nom
        th Prénom
        th Email
        th Inscription finalisée ?
        th Vérification
        th 
    tbody
      - @users.each do |user| 
        tr
          td= user.lastname
          td= user.firstname
          td= user.email
          td= boolean_badge(user.registration_complete)
          td 
            span class="badge badge-#{user_verification_state_style(user.verification_state)}"= user_verification_state_title(user.verification_state)

          td.action-btns
            => link_to edit_profile_admin_user_path(user), 
                        class: "btn btn-sm btn-info", 
                        title: "Editer" do

              i.fa.fa-pencil
            = link_to admin_user_path(user),
                      method: :delete, 
                      data: {confirm: "Confirmer la suppression ?"}, 
                      title: "Supprimer", 
                      class: "btn btn-sm btn-danger" do 

                i.fa.fa-trash
      
      - if @users.empty?
        tr
          td colspan="7"
            p.text-center: em.text-muted Aucun résultat


  = paginate @users